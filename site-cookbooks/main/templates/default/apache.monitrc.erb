check process apache2 
   with pidfile "/var/run/apache2.pid"
   start program = "/etc/init.d/apache2 start"
   stop program = "/etc/init.d/apache2 stop"
   
   if 5 restarts within 5 cycles then timeout
   
   if totalmem > 90% then alert   
   if cpu usage > 90% for 3 cycles then restart
   
   if failed host 127.0.0.1 port 80 timeout 65 seconds then restart
   if failed host 127.0.0.1 port 443 timeout 65 seconds then restart   
  
